#ifndef PORTAGE_CONFIG_H_
#define PORTAGE_CONFIG_H_

// This file contains a set of defines generated automatically by
// CMake during installation


// PORTAGE version number

#define PORTAGE_VERSION_MAJOR @PORTAGE_VERSION_MAJOR@
#define PORTAGE_VERSION_MINOR @PORTAGE_VERSION_MINOR@
#define PORTAGE_VERSION_PATCH @PORTAGE_VERSION_PATCH@

// Is PORTAGE compiled with MPI

#cmakedefine PORTAGE_ENABLE_MPI 

// Is PORTAGE compiled with Thrust

#cmakedefine PORTAGE_ENABLE_THRUST

// Is Portage compiled with TANGRAM support

#cmakedefine HAVE_TANGRAM

// Is PORTAGE linked with Jali

#cmakedefine HAVE_JALI

#endif  // PORTAGE_CONFIG_H_

